// Props:
//   user: the logged-in user object passed in from your auth context/router
//   onClose: () => void
function ProfileModal({ user, onClose }) {
  const isWorker = user.role === "worker";

  const stars = (n) => {
    if (!n) return "â˜†â˜†â˜†â˜†â˜†";
    return "â˜…".repeat(Math.floor(n)) + (n % 1 >= 0.5 ? "Â½" : "") + "â˜†".repeat(5 - Math.ceil(n));
  };

  const StatCard = ({ label, value, icon }) => (
    <div style={{
      flex: "1 1 130px", padding: "16px 14px", borderRadius: 10,
      background: "#0d1321", border: "1px solid rgba(56,189,248,0.06)", textAlign: "center",
    }}>
      <div style={{ fontSize: 22, marginBottom: 6 }}>{icon}</div>
      <div style={{ fontSize: 20, fontWeight: 700, color: "#f1f5f9" }}>{value}</div>
      <div style={{ fontSize: 11, color: "#64748b", marginTop: 3, textTransform: "uppercase", letterSpacing: "0.4px" }}>{label}</div>
    </div>
  );

  return (
    <div
      onClick={onClose}
      style={{
        position: "fixed", inset: 0, background: "rgba(0,0,0,0.65)",
        backdropFilter: "blur(4px)", zIndex: 200,
        display: "flex", alignItems: "center", justifyContent: "center", padding: 20,
      }}
    >
      <div
        onClick={e => e.stopPropagation()}
        style={{
          width: "100%", maxWidth: 440, background: "#0d1526",
          border: "1px solid rgba(56,189,248,0.18)", borderRadius: 16,
          padding: 28, boxShadow: "0 24px 64px rgba(0,0,0,0.5)", position: "relative",
        }}
      >
        {/* Close button */}
        <button
          onClick={onClose}
          style={{
            position: "absolute", top: 14, right: 14, width: 30, height: 30,
            borderRadius: "50%", border: "1px solid rgba(56,189,248,0.08)",
            background: "#111827", color: "#64748b", fontSize: 16, cursor: "pointer",
            display: "flex", alignItems: "center", justifyContent: "center",
          }}
        >âœ•</button>

        {/* Avatar + name */}
        <div style={{ display: "flex", alignItems: "center", gap: 16, marginBottom: 20 }}>
          <div style={{
            width: 64, height: 64, borderRadius: "50%", flexShrink: 0,
            background: "linear-gradient(135deg, #38bdf8, #06b6d4)",
            display: "flex", alignItems: "center", justifyContent: "center",
            fontSize: 26, fontWeight: 700, color: "#fff",
            border: "3px solid rgba(56,189,248,0.2)",
          }}>
            {user.name[0].toUpperCase()}
          </div>
          <div>
            <div style={{ fontSize: 18, fontWeight: 700, color: "#f1f5f9" }}>{user.name}</div>
            <div style={{ marginTop: 4 }}>
              <span style={{
                padding: "3px 10px", borderRadius: 20, fontSize: 12, fontWeight: 600,
                background: isWorker ? "rgba(52,211,153,0.12)" : "rgba(56,189,248,0.10)",
                color: isWorker ? "#34d399" : "#38bdf8",
              }}>
                {isWorker ? "ğŸ”§ Worker" : "ğŸ  Customer"}
              </span>
            </div>
          </div>
        </div>

        {/* Rating */}
        <div style={{
          padding: "14px 16px", borderRadius: 10, background: "#111827",
          border: "1px solid rgba(56,189,248,0.08)", marginBottom: 18,
          display: "flex", alignItems: "center", justifyContent: "space-between",
        }}>
          <div>
            <div style={{ fontSize: 11, color: "#64748b", textTransform: "uppercase", letterSpacing: "0.5px", marginBottom: 4 }}>
              Account Rating
            </div>
            <div style={{ fontSize: 22, fontWeight: 800, color: "#fbbf24" }}>
              {user.rating ? user.rating.toFixed(1) : "N/A"}
            </div>
            <div style={{ fontSize: 13, color: "#fbbf24", letterSpacing: 2 }}>
              {stars(user.rating)}
            </div>
          </div>
          <div style={{ textAlign: "right" }}>
            <div style={{ fontSize: 13, color: "#64748b" }}>{user.reviewCount} reviews</div>
            {user.rating >= 4.8 && <div style={{ fontSize: 11, color: "#fbbf24", marginTop: 2 }}>â­ Top Rated</div>}
            {user.rating >= 4.5 && user.rating < 4.8 && <div style={{ fontSize: 11, color: "#64748b", marginTop: 2 }}>âœ… Highly Rated</div>}
          </div>
        </div>

        {/* Role-specific stats */}
        <div style={{ marginBottom: 6 }}>
          <div style={{ fontSize: 12, fontWeight: 600, color: "#64748b", textTransform: "uppercase", letterSpacing: "0.5px", marginBottom: 12 }}>
            {isWorker ? "Worker Stats" : "Customer Stats"}
          </div>
          <div style={{ display: "flex", gap: 10, flexWrap: "wrap" }}>
            {isWorker ? (
              <>
                <StatCard label="Jobs Completed" value={user.stats.jobsDone} icon="âœ…" />
                <StatCard label="Quality Rating" value={user.stats.qualityRating} icon="ğŸ†" />
                <StatCard label="Avg. Pay" value={user.stats.avgPayReceived} icon="ğŸ’°" />
              </>
            ) : (
              <>
                <StatCard label="Jobs Posted" value={user.stats.jobsPosted} icon="ğŸ“‹" />
                <StatCard label="Avg. Pay" value={user.stats.avgPay} icon="ğŸ’¸" />
                <StatCard label="Avg. Duration" value={user.stats.avgDuration} icon="â±ï¸" />
              </>
            )}
          </div>
        </div>

        {/* Email */}
        <div style={{ marginTop: 18, padding: "10px 14px", borderRadius: 8, background: "#111827", border: "1px solid rgba(56,189,248,0.08)" }}>
          <span style={{ fontSize: 12, color: "#64748b" }}>âœ‰ {user.email}</span>
        </div>
      </div>
    </div>
  );
}
